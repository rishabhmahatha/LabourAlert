<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:padding="@dimen/_10sdp"
                  android:background="@color/colorWhite"
                  android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/label_company"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_regular"
                    android:textSize="@dimen/_15sdp"
            />

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_company"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/font_roboto_regular"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/label_states"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_regular"
                    android:textSize="@dimen/_15sdp"
            />

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_states"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/font_roboto_regular"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/label_years"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_regular"
                    android:textSize="@dimen/_15sdp"
            />

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:hint="@string/hint_start"
                    android:lines="1"
                    android:maxLines="1"
                    android:fontFamily="@font/font_roboto_regular"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:hint="@string/hint_end"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/font_roboto_regular"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/label_months"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_regular"
                    android:textSize="@dimen/_15sdp"
            />

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:hint="@string/hint_start"
                    android:lines="1"
                    android:maxLines="1"
                    android:fontFamily="@font/font_roboto_regular"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:hint="@string/hint_end"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:lines="1"
                    android:maxLines="1"
                    android:fontFamily="@font/font_roboto_regular"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/label_city"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_regular"
                    android:textSize="@dimen/_15sdp"
            />

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_city"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/font_roboto_regular"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">


            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/label_country"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_regular"
                    android:textSize="@dimen/_15sdp"
            />

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_country"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/font_roboto_regular"
                    android:background="@drawable/drawable_rectangle_edit_text_bg"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_blue_button_bg"
                android:text="@string/label_search"
                android:textAllCaps="false"
                android:fontFamily="@font/font_roboto_regular"
                android:id="@+id/fragment_login_btnLogin"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
        />

    </LinearLayout>

</ScrollView>