<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"

                android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView android:layout_width="match_parent"
                                                  android:src="@drawable/ic_splash_bg"
                                                  android:layout_above="@+id/activity_splash_llParent"
                                                  android:layout_height="match_parent"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/activity_splash_llParent"
                  android:layout_alignParentBottom="true"
                  android:layout_gravity="bottom"
                  android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView android:layout_width="0dp" android:layout_height="match_parent"
                                                     android:id="@+id/activity_splash_tvLogIn"
                                                     android:layout_weight="1"
                                                     android:background="@color/colorGray"
                                                     android:lines="1"
                                                     android:maxLines="1"
                                                     android:text="@string/log_in"
                                                     android:gravity="center"
                                                     android:paddingLeft="@dimen/_10sdp"
                                                     android:paddingRight="@dimen/_10sdp"
                                                     android:paddingTop="@dimen/_15sdp"
                                                     android:paddingBottom="@dimen/_15sdp"
                                                     android:textSize="@dimen/_16sdp"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:textColor="@color/colorPrimary"/>


        <android.support.v7.widget.AppCompatTextView android:layout_width="0dp" android:layout_height="match_parent"
                                                     android:id="@+id/activity_splash_tvViewResult"
                                                     android:lines="1"
                                                     android:maxLines="1"
                                                     android:layout_weight="1"
                                                     android:background="@color/colorPrimary"
                                                     android:text="@string/view_results"
                                                     android:gravity="center"
                                                     android:paddingLeft="@dimen/_10sdp"
                                                     android:paddingRight="@dimen/_10sdp"
                                                     android:paddingTop="@dimen/_15sdp"
                                                     android:paddingBottom="@dimen/_15sdp"
                                                     android:textSize="@dimen/_16sdp"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:textColor="@color/colorWhite"/>


    </LinearLayout>

</RelativeLayout>