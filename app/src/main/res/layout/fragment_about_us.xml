<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@android:color/white"
              android:padding="@dimen/_10sdp"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_subscription_item_bg"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/lable_version"
                android:paddingStart="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/font_roboto_regular"
                android:textSize="@dimen/_16sdp"
        />

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="@dimen/_5sdp"
                android:text="1.2.2"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/font_roboto_regular"
                android:textSize="@dimen/_16sdp"
        />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_subscription_item_bg"
            android:layout_marginTop="@dimen/_150sdp"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="@string/label_privacy_policy"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/font_roboto_regular"
            android:textSize="@dimen/_16sdp"
    />


    <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_subscription_item_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="@string/label_terms_and_conditions"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/font_roboto_regular"
            android:textSize="@dimen/_16sdp"
    />

</LinearLayout>