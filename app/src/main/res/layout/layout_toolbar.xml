<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/white"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/llToolbarCommon"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">


            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvToolBarTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    tools:text="About Us"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/font_roboto_medium"
                    android:textSize="@dimen/_18sdp"/>


            <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_side_menu_button_blue"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llToolbarResult"
                android:background="@drawable/drawable_bg_result_header"
                android:padding="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="visible"
                android:orientation="horizontal">


            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/toolbar_btnResult"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/label_result"
                    android:textSize="@dimen/_15sdp"
                    android:background="@drawable/drawable_selector_bg_button"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
            />


            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/toolbar_btnGraph"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/label_graph"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/drawable_selector_bg_button"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
            />


            <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/toolbar_btnShare"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/drawable_rounded_rectangle_white_bg"
                    android:src="@drawable/ic_share"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
            />


        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.Toolbar>