<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:padding="@dimen/_10sdp"
                  android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_subscription_item_bg"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView android:layout_width="0dp" android:layout_height="match_parent"
                                                         android:layout_weight="1"
                                                         android:background="@color/colorPrimary"
                                                         android:text="@string/label_subscription"
                                                         android:padding="@dimen/_5sdp"
                                                         android:textColor="@color/colorBlack"
                                                         android:fontFamily="@font/font_roboto_regular"
                                                         android:textSize="@dimen/_16sdp"
            />

            <android.support.v7.widget.AppCompatTextView android:layout_width="0dp" android:layout_height="match_parent"
                                                         android:layout_weight="1"
                                                         android:background="@color/colorPrimary"
                                                         android:padding="@dimen/_5sdp"
                                                         android:text="@string/label_advanced"
                                                         android:textColor="@color/colorGray"
                                                         android:fontFamily="@font/font_roboto_regular"
                                                         android:textSize="@dimen/_16sdp"
            />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:background="@drawable/drawable_subscription_item_bg"
                                                     android:layout_marginTop="@dimen/_10sdp"
                                                     android:padding="@dimen/_10sdp"
                                                     android:text="@string/label_about_us"
                                                     android:gravity="center"
                                                     android:textColor="@color/colorBlack"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:textSize="@dimen/_16sdp"
        />

        <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:id="@+id/activity_splash_tvViewResult"
                                                     android:lines="1"
                                                     android:maxLines="1"
                                                     android:text="@string/label_update_password"
                                                     android:gravity="center"
                                                     android:layout_marginTop="@dimen/_30sdp"
                                                     android:paddingLeft="@dimen/_10sdp"
                                                     android:paddingRight="@dimen/_10sdp"
                                                     android:paddingTop="@dimen/_10sdp"
                                                     android:paddingBottom="@dimen/_10sdp"
                                                     android:textSize="@dimen/_20sdp"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:textColor="@color/colorBlack"/>

        <android.support.v7.widget.AppCompatEditText android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:padding="@dimen/_10sdp"
                                                     android:layout_marginTop="@dimen/_20sdp"
                                                     android:layout_marginStart="@dimen/_20sdp"
                                                     android:layout_marginEnd="@dimen/_20sdp"
                                                     android:inputType="textPassword"
                                                     android:lines="1"
                                                     android:maxLines="1"
                                                     android:maxLength="30"
                                                     android:id="@+id/fragment_login_etEmail"
                                                     android:hint="@string/hint_current_password"
                                                     android:textSize="@dimen/_14sdp"
                                                     android:textColor="@color/colorDarkGray"
                                                     android:gravity="center"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:background="@drawable/drawable_rectangle_edit_text_bg"/>

        <android.support.v7.widget.AppCompatEditText android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:padding="@dimen/_10sdp"
                                                     android:layout_marginTop="@dimen/_30sdp"
                                                     android:maxLength="16"
                                                     android:layout_marginStart="@dimen/_20sdp"
                                                     android:layout_marginEnd="@dimen/_20sdp"
                                                     android:hint="@string/hint_new_password"
                                                     android:lines="1"
                                                     android:textSize="@dimen/_14sdp"
                                                     android:id="@+id/fragment_login_etPassword"
                                                     android:maxLines="1"
                                                     android:inputType="textPassword"
                                                     android:gravity="center"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:background="@drawable/drawable_rectangle_edit_text_bg"/>


        <android.support.v7.widget.AppCompatEditText android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:padding="@dimen/_10sdp"
                                                     android:layout_marginTop="@dimen/_20sdp"
                                                     android:maxLength="16"
                                                     android:layout_marginStart="@dimen/_20sdp"
                                                     android:layout_marginEnd="@dimen/_20sdp"
                                                     android:hint="@string/hint_re_validate_password"
                                                     android:lines="1"
                                                     android:textSize="@dimen/_14sdp"
                                                     android:maxLines="1"
                                                     android:inputType="textPassword"
                                                     android:gravity="center"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:background="@drawable/drawable_rectangle_edit_text_bg"/>

        <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:gravity="center"
                                                     android:text="@string/hint_password_must_contain_1_upper_case_1_number_and_1_symbol"
                                                     android:layout_gravity="center"
                                                     android:padding="@dimen/_10sdp"
                                                     android:id="@+id/fragment_login_tvForgotPassword"
                                                     android:layout_marginTop="@dimen/_15sdp"
                                                     android:textColor="@color/colorBlack"
                                                     android:fontFamily="@font/font_roboto_regular"
                                                     android:textSize="@dimen/_12sdp"
        />

        <android.support.v7.widget.AppCompatButton android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/drawable_blue_button_bg"
                                                   android:text="@string/label_chnage_password"
                                                   android:textAllCaps="false"
                                                   android:id="@+id/fragment_login_btnLogin"
                                                   android:textColor="@color/colorWhite"
                                                   android:textSize="@dimen/_18sdp"
                                                   android:padding="@dimen/_10sdp"
                                                   android:fontFamily="@font/font_roboto_regular"
                                                   android:layout_marginTop="@dimen/_20sdp"
                                                   android:layout_marginStart="@dimen/_20sdp"
                                                   android:layout_marginEnd="@dimen/_20sdp"
        />


    </LinearLayout>

</ScrollView>